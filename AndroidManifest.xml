<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.krypty">

    <!--Creative Commons License for icon use
    [Attribution-ShareAlike 4.0 International CC BY-SA 4.0] (http://creativecommons.org/licenses/by-sa/4.0/)
    "Android Developer Icons is a custom icon set, created by Opoloo."-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Krypty">
        <activity android:name=".LoginPage" />
        <activity android:name=".SettingsPage" />
        <activity android:name=".MarketPage" />
        <activity android:name=".InteractPage" />
        <activity
            android:name=".HomePage"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <data
                    android:host="path"
                    android:scheme="krypty" />
            </intent-filter>
        </activity>
    </application>

</manifest>