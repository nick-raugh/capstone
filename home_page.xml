<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <!-- Buttons Bar-->
    <LinearLayout
        android:id="@+id/linearLayout_imagebuttons_box"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/ImageButton_market"
            android:layout_width="0dp"
            android:background="@drawable/custom_image_button"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_action_line_chart"
            android:contentDescription="@string/market" />

        <Space android:layout_width="15dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/ImageButton_home"
            android:layout_width="0dp"
            android:background="@drawable/custom_image_button"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_action_home"
            android:contentDescription="@string/home" />

        <Space android:layout_width="15dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/ImageButton_interact"
            android:layout_width="0dp"
            android:background="@drawable/custom_image_button"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_action_users"
            android:contentDescription="@string/interact" />

        <Space android:layout_width="15dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/ImageButton_settings"
            android:layout_width="0dp"
            android:background="@drawable/custom_image_button"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_action_gear"
            android:contentDescription="@string/settings" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>